                    </div>
                </div>
            </div>
            <!-- End services section -->

            <!-- contact section
                ================================================== -->
            <div class="box-section contact-section triggerAnimation animated" data-animate="flipInY">
                <h2>با ما در ارتباط باشید</h2>
                <form id="contact-form">
                    <div class="text-fields">
                        <div class="float-input">
                            <input name="name" id="name" type="text" placeholder="نام">
                            <span><i class="fa fa-user"></i></span>
                        </div>
                        <div class="float-input">
                            <input name="mail" id="mail" type="text" placeholder="ایمیل">
                            <span><i class="fa fa-envelope-o"></i></span>
                        </div>
                        <div class="float-input">
                            <input name="website" id="website" type="text" placeholder="وب سایت">
                            <span><i class="fa fa-link"></i></span>
                        </div>
                    </div>
                    <div class="comment-area">
                        <textarea name="comment" id="comment" placeholder="پیغام"></textarea>
                    </div>
                    <div class="submit-area">
                        <button type="submit" name="contact-submit" id="submit_contact">
                            <i class="fa fa-envelope-o"></i>
                            ارسال پیام
                        </button>
                    </div>
                    <div id="msg" class="message"></div>
                </form>
            </div>
            <!-- End map section -->

