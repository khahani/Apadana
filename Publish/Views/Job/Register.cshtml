
@{
    ViewBag.Title = "Register";
}

<div class="box-section banner-section triggerAnimation animated rollIn" data-animate="rollIn">
    <form data-toggle="validator" role="form">
        <div id="register-wizard">
            <h3>مشخصات اولیه</h3>
            <section>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="unit-name">نام واحد:</label>
                            <input type="text" class="form-control" id="unit-name" placeholder="نام واحد" required>
                        </div>
                        <div class="form-group">
                            <label for="applicant">درخواست دهنده:</label>
                            <input type="text" class="form-control" id="applicant" placeholder="درخواست دهنده" required>
                        </div>
                        <div class="form-group">
                            <label for="mobile">تلفن همراه:</label>
                            <input type="text" class="form-control" id="mobile" placeholder="تلفن همراه" required>
                        </div>
                        <div class="form-group">
                            <label for="address">آدرس:</label>
                            <input type="text" class="form-control" id="address" placeholder="آدرس" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="username">نام کاربری:</label>
                            <input type="text" class="form-control" id="username" placeholder="نام کاربری" required>
                        </div>
                        <div class="form-group">
                            <label for="field-of-activity">زمینه فعالیت:</label>
                            <input type="text" class="form-control" id="field-of-activity" placeholder="زمینه فعالیت" required>
                        </div>
                        <div class="form-group">
                            <label for="province">استان:</label>
                            <select class="form-control" id="province">
                                <option selected>آذربایجان شرقی</option>
                                <option>خراسان رضوی</option>
                                <option>خراسان جنوبی</option>
                                <option>تهران</option>
                                <option>کرمان</option>
                                <option>...</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="email">ایمیل:</label>
                            <input type="email" class="form-control" id="email" placeholder="ایمیل">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="head-of-the-unit">مسئول واحد:</label>
                            <input type="text" class="form-control" id="head-of-the-unit" placeholder="مسئول واحد" required>
                        </div>
                        <div class="form-group">
                            <label for="phone">تلفن:</label>
                            <input type="text" class="form-control" id="phone" placeholder="تلفن" required>
                        </div>
                        <div class="form-group">
                            <label for="city">شهر:</label>
                            <input type="text" class="form-control" id="city" placeholder="شهر" required>
                        </div>
                    </div>
                </div>
            </section>
            <h3>ثبت عنوان شغلی</h3>
            <section>
                <div class="row">
                    <div class="col-md-9">
                        <div class="alert alert-info">
                            کارفرما گرامی چنانچه عنوان شغلی مورد نظر شما در میان گزینه ها نمی باشد روی دکمه افزودن عنوان شغلی کلیک کنید.
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-success">افزودن عنوان شغلی</button>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="main-title">عنوان های اصلی:</label>
                            <select class="form-control" id="main-title">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>علوم پایه</option>
                                <option>نیروهای ساده و خدمات</option>
                                <option>گردشگری، هتلداری و مشاغل شهری</option>
                                <option>هنر، سینما و تبلیغات</option>
                                <option>نیروهای فنی و حرفه ای</option>
                                <option>کشاورزی، دامپروری و منابع طبیعی</option>
                                <option>...</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="count">تعداد:</label>
                            <input type="text" class="form-control" id="count" placeholder="تعداد" required>
                        </div>
                        <div class="form-group">
                            <label for="field-of-study">رشته تحصیلی:</label>
                            <input type="text" class="form-control" id="field-of-study" placeholder="رشته تحصیلی" >
                        </div>
                        <div class="form-group">
                            <label for="salary">میزان حقوق:</label>
                            <select class="form-control" id="salary">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>کمتر از قانون کار</option>
                                <option>پایه قانون کار</option>
                                <option>قانون کار با مزایا</option>
                                <option>پروژه ای</option>
                                <option>ساعتی</option>
                                <option>روزمزد</option>
                                <option>توافقی</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="insurance-status">وضعیت بیمه:</label>
                            <select class="form-control" id="insurance-status">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>دارد</option>
                                <option>ندارد</option>
                                <option>پس از دوره آزمایشی</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="address">آدرس:</label>
                            <textarea class="form-control" id="address" placeholder="آدرس" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="sub-title">زیر عنوان:</label>
                            <select class="form-control" id="sub-title">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>خدمات حمل و نقل</option>
                                <option>راننده وسیله حمل و نقل صنعتی</option>
                                <option>راننده وسیله حمل و نقل شهری و سنگین</option>
                                <option>*** بر اساس عنوان اصلی پر خواهد شد</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="related-work-experience">سابقه کار مرتبط</label>
                            <select class="form-control" id="related-work-experience">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>داشته باشد</option>
                                <option>نداشته باشد</option>
                                <option>مهم نیست</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="max-age">حداکثر سن</label>
                            <select class="form-control" id="max-age">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>بین 20 تا 25</option>
                                <option>بین 25 تا 30</option>
                                <option>بین 30 تا 35</option>
                                <option>بین 35 تا 40</option>
                                <option>مهم نیست</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="marital-status">وضعیت تاهل</label>
                            <select class="form-control" id="marital-status">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>مجرد</option>
                                <option>متاهل</option>
                                <option>مهم نیست</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>سرویس دارد:</label><br />
                            <label class="radio-inline">
                                <input type="radio" name="has-service">بله
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="no-service">خیر
                            </label>
                        </div>
                        <div class="form-group">
                            <label for="ads-validity-period">مدت اعتبار آگهی</label>
                            <select class="form-control" id="ads-validity-period">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>1 روز</option>
                                <option>2 روز</option>
                                <option>3 روز</option>
                                <option>4 روز</option>
                                <option>5  روز</option>
                                <option>6 روز</option>
                                <option>7 روز</option>
                                <option>8 روز</option>
                                <option>9 روز</option>
                                <option>10 روز</option>
                                <option>11 روز</option>
                                <option>12 روز</option>
                                <option>13 روز</option>
                                <option>14 روز</option>
                                <option>15 روز</option>
                                <option>16 روز</option>
                                <option>17 روز</option>
                                <option>18 روز</option>
                                <option>19 روز</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="job-title">عنوان شغلی:</label>
                            <select class="form-control" id="job-title">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>راننده دامپر</option>
                                <option>راننده لودر</option>
                                <option>راننده جرثقیل</option>
                                <option>*** بر اساس زیر عنوان پر خواهد شد</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="minimum-education">حداقل تحصیلات</label>
                            <select class="form-control" id="minimum-education">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>ابتدایی</option>
                                <option>راهنمایی</option>
                                <option>دیپلم</option>
                                <option>کاردانی</option>
                                <option>کارشناسی</option>
                                <option>کارشناسی ارشد</option>
                                <option>دکتری و بالاتر</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="working-hours">ساعات کاری</label>
                            <select class="form-control" id="working-hours">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>8 ساعت</option>
                                <option>12 ساعت</option>
                                <option>شیفتی</option>
                                <option>سایر</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="gender">جنسیت</label>
                            <select class="form-control" id="gender">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>آقا</option>
                                <option>خانم</option>
                                <option>مهم نیست</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="service-description">توضیحات سرویس:</label>
                            <textarea class="form-control" id="service-description" placeholder="توضیحات سرویس" rows="2"></textarea>
                        </div>
                    </div>
                </div>
            </section>
            <h3>اتمام ثبت نام</h3>
            <section style="font-family:Tahoma;">
                <p>کارفرما گرامی ثبت نام شما صورت پذیرفت.</p>
                <p>نام کاربری و کلمه عبور برای شما ارسال می گردد.</p>
                <br />
                <p>با تشکر از ثبت نام شما</p>
            </section>
        </div>
    </form>
</div>