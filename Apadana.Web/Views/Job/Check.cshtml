@model Apadana.Entities.Job
@{
    ViewBag.Title = "Check";
}

<!-- single post section
                ================================================== -->
<div class="single-post triggerAnimation animated" data-animate="flipInY">
   @* <img src="~/upload/blog/qc.jpg" alt="">*@
    <div class="single-post-content">

        <h1>@Model.JobTitle</h1>
       
        <ul class="post-tags">
            <li>
                <i class="fa fa-calendar-o"></i>
                <span>@Model.UpdatedDate</span>
            </li>
            <li>
                <i class="fa fa-user"></i>
                <span>@Model.Owner.UnitName</span>
            </li>
        </ul>
        
        <div class="alert alert-info">
            کارجو گرامی اگر عضو سایت هستید میتوانید اطلاعات تماس کارفرما مورد نظر را با کلیک روی دکمه های پیامک یا ایمیل دریافت کنید.
        </div>

        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">توضیحات</div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <td class="td-title">زمینه فعالیت</td>
                                <td>@Model.Owner.FieldOfAcivity</td>
                            </tr>
                            <tr>
                                <td class="td-title">ساعات کار</td>
                                <td>@WorkingHoursType.Instance.Get(Model.WorkingHours).Value</td>
                            </tr>
                            <tr>
                                <td class="td-title">تحصیلات مورد نیاز</td>
                                <td>@EducationType.Instance.Get(Model.MinimumEducation).Value</td>
                            </tr>
                            <tr>
                                <td class="td-title">جنسیت</td>
                                <td>@GenderType.Instance.Get(Model.Gender).Value</td>
                            </tr>
                            <tr>
                                <td class="td-title">بیمه</td>
                                <td>@InsuranceStatusType.Instance.Get(Model.InsuranceStatus).Value</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">آدرس</div>
                <div class="panel-body">@Model.Address</div>
            </div>
            <div class="panel panel-success">
                <div class="panel-heading">میزان حقوق</div>
                <div class="panel-body">@SalaryType.Instance.Get(Model.Salary).Value</div>
            </div>
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("SendBySMS", "Job", new { id = Model.Id })'">
                <span class="fa fa-paper-plane"></span> پیامک
            </button>
            <button type="button" class="btn btn-danger">
                <span class="fa fa-envelope"></span> ایمیل
            </button>
        </div>
    </div>
</div>
<!-- End single post section -->

