
@{
    ViewBag.Title = "Register";
}

<div class="box-section banner-section triggerAnimation animated rollIn" data-animate="rollIn">
    <form data-toggle="validator" role="form">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group has-warning">
                    <label for="name">نام</label>
                    <input type="text" class="form-control" id="name" placeholder="نام" required>
                </div>
                <div class="form-group has-warning">
                    <label for="lastname">نام خانوادگی</label>
                    <input type="text" class="form-control" id="lastname" placeholder="نام خانوادگی" required>
                </div>
                <div class="form-group has-warning">
                    <label for="fathername">نام پدر</label>
                    <input type="text" class="form-control" id="fathername" placeholder="نام پدر" required>
                </div>
                <div class="form-group">
                    <label>جنسیت:</label><br />
                    <label class="radio-inline">
                        <input type="radio" name="optradio">آقا
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="optradio">خانم
                    </label>
                </div>
                <div class="form-group has-warning">
                    <label for="birth-date">تاریخ تولد</label>
                    <input type="text" class="form-control persian-date" id="birth-date" placeholder="" required>
                </div>
                <div class="form-group has-warning">
                    <label for="national-code">کد ملی</label>
                    <input type="text" class="form-control" id="national-code" placeholder="کد ملی" required>
                </div>
                <div class="form-group has-warning">
                    <label for="personal-id">شماره شناسنامه</label>
                    <input type="text" class="form-control" id="personal-id" placeholder="شماره شناسنامه" required>
                </div>
                <div class="form-group">
                    <label>وضعیت تاهل</label><br />
                    <label class="radio-inline">
                        <input type="radio" name="optradio">مجرد
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="optradio">متاهل
                    </label>
                </div>
                <div class="form-group">
                    <label for="military-status">وضعیت خدمت</label>
                    <select class="form-control" id="military-status">
                        <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                        <option>پایان خدمت</option>
                        <option>معافیت پزشکی</option>
                        <option>معافیت کفالت</option>
                        <option>معافیت خاص</option>
                        <option>خدمت نکرده</option>
                    </select>
                </div>
                <div class="form-group has-warning">
                    <label for="latest-degree">آخرین مدرک تحصیلی</label>
                    <select class="form-control" id="latest-degree" required>
                        <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                        <option>بیسواد</option>
                        <option>دیپلم</option>
                        <option>لیسانس</option>
                        <option>فوق لیسانس</option>
                        <option>دکتری و بالاتر</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="field-of-study">رشته تحصیلی</label>
                    <input type="text" class="form-control" id="field-of-study" placeholder="رشته تحصیلی">
                </div>
                <div class="form-group">
                    <label for="university-name">نام دانشگاه</label>
                    <input type="text" class="form-control" id="university-name" placeholder="نام دانشگاه">
                </div>
                <div class="form-group has-warning">
                    <label for="university-type">نوع دانشگاه</label>
                    <select class="form-control" id="latest-degree" required>
                        <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                        <option>دولتی</option>
                        <option>آزاد</option>
                        <option>غیرانتفاعی</option>
                        <option>علمی کاربردی</option>
                        <option>بین المللی</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="city-of-degree">شهر فارغ التحصیلی</label>
                    <input type="text" class="form-control" id="city-of-degree" placeholder="شهر فارغ التحصیلی" >
                </div>
                <div class="form-group">
                    <label for="year-of-graduation">سال فارغ التحصیلی</label>
                    <input type="text" class="form-control" id="year-of-graduation" placeholder="سال فارغ التحصیلی" >
                </div>
                <div class="form-group">
                    <label for="grade-point-average">معدل</label>
                    <input type="text" class="form-control" id="grade-point-average" placeholder="معدل" >
                </div>
                <div class="form-group">
                    <label for="min-related-experience">حداقل مدت سابقه كار در حوزه تحصيلات يا مهارت تخصصي</label>
                    <input type="text" class="form-control" id="min-related-experience" placeholder="لطفا مدت سابقه کاری را به ماه و به صورت عدد وارد کنید">
                </div>
                <div class="form-group">
                    <label for="about-speciality">کلیه مشاغل , مهارت ها و تخصص ها به صورت کلمات کلیدی</label>
                    <textarea rows="2" class="form-control" id="about-speciality" placeholder="برنامه نویس ارشد، طراحی سایت، اپلیکیشن موبایل" ></textarea>
                </div>
                <div class="form-group">
                    <label for="description-for-speciality">توضیحات مهارت ها و تخصص ها</label>
                    <textarea rows="2" class="form-control" id="description-for-speciality" placeholder="توضیحات مهارت ها و تخصص ها"></textarea>
                </div>
                <div class="form-group">
                    @*<label for="resume">سوابق کاری:</label>*@
                    @*<textarea rows="2" class="form-control" id="resume" placeholder="کاریابی مجازی آپادانا: برنامه نویس ارشد، موسسه فرهنگی آموزشی امام حسین(ع): مدیر تولید نرم افزار" ></textarea>*@
                    <div class="panel panel-default">
                        <div class="panel-heading">سوابق کاری:</div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="text-right">نام سازمان</th>
                                        <th class="text-right">ضمینه فعالیت سازمان</th>
                                        <th class="text-right">عنوان و سمت شغلی</th>
                                        <th class="text-right">تاریخ شروع</th>
                                        <th class="text-right">تاریخ خاتمه</th>
                                        <th class="text-right">علت ترک شغل</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><input type="text" id="organization1-name" class="form-control" /></td>
                                        <td><input type="text" id="organization1-field-of-activity" class="form-control" /></td>
                                        <td><input type="text" id="organization1-job-title" class="form-control"/></td>
                                        <td><input type="text" id="organization1-begin-date" class="form-control persian-date"/></td>
                                        <td><input type="text" id="organization1-end-date" class="form-control persian-date"/></td>
                                        <td><input type="text" id="organization1-reason-for-leave" class="form-control" /></td>
                                    </tr>
                                    <tr>
                                        <td><input type="text" id="organization2-name" class="form-control" /></td>
                                        <td><input type="text" id="organization2-field-of-activity" class="form-control" /></td>
                                        <td><input type="text" id="organization2-job-title" class="form-control" /></td>
                                        <td><input type="text" id="organization2-begin-date" class="form-control persian-date" /></td>
                                        <td><input type="text" id="organization2-end-date" class="form-control persian-date" /></td>
                                        <td><input type="text" id="organization2-reason-for-leave" class="form-control" /></td>
                                    </tr>
                                    <tr>
                                        <td><input type="text" id="organization3-name" class="form-control" /></td>
                                        <td><input type="text" id="organization3-field-of-activity" class="form-control" /></td>
                                        <td><input type="text" id="organization3-job-title" class="form-control" /></td>
                                        <td><input type="text" id="organization3-begin-date" class="form-control persian-date" /></td>
                                        <td><input type="text" id="organization3-end-date" class="form-control persian-date" /></td>
                                        <td><input type="text" id="organization3-reason-for-leave" class="form-control" /></td>
                                    </tr>
                                    <tr>
                                        <td><input type="text" id="organization4-name" class="form-control" /></td>
                                        <td><input type="text" id="organization4-field-of-activity" class="form-control" /></td>
                                        <td><input type="text" id="organization4-job-title" class="form-control" /></td>
                                        <td><input type="text" id="organization4-begin-date" class="form-control persian-date" /></td>
                                        <td><input type="text" id="organization4-end-date" class="form-control persian-date" /></td>
                                        <td><input type="text" id="organization4-reason-for-leave" class="form-control" /></td>
                                    </tr>
                                    <tr>
                                        <td><input type="text" id="organization5-name" class="form-control" /></td>
                                        <td><input type="text" id="organization5-field-of-activity" class="form-control" /></td>
                                        <td><input type="text" id="organization5-job-title" class="form-control" /></td>
                                        <td><input type="text" id="organization5-begin-date" class="form-control persian-date" /></td>
                                        <td><input type="text" id="organization5-end-date" class="form-control persian-date" /></td>
                                        <td><input type="text" id="organization5-reason-for-leave" class="form-control" /></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="form-group has-warning">
                    <label for="province">استان</label>
                    <select class="form-control" id="province" required>
                        <option value="" selected disabled>لطفا استان خود را انتخاب کنید</option>
                        <option value="2">آذربایجان غربی</option>
                        <option value="32">آذربایجان شرقی</option>
                        <option value="4">اصفهان</option>
                        <option value="5">ایلام</option>
                        <option value="6">بوشهر</option>
                        <option value="7">تهران</option>
                        <option value="9">خراسان جنوبی</option>
                        <option value="30">خراسان رضوی</option>
                        <option value="10">خراسان شمالی</option>
                        <option value="11">خوزستان</option>
                        <option value="12">زنجان</option>
                        <option value="13">سمنان</option>
                        <option value="14">سیستان و بلوچستان</option>
                        <option value="15">فارس</option>
                        <option value="16">قزوین</option>
                        <option value="17">قم</option>
                        <option value="24">لرستان</option>
                        <option value="25">مازندران</option>
                        <option value="26">مرکزی</option>
                        <option value="27">هرمزگان</option>
                        <option value="28">همدان</option>
                        <option value="8">چهارمحال بختیاری</option>
                        <option value="18">کردستان</option>
                        <option value="19">کرمان</option>
                        <option value="20">کرمانشاه</option>
                        <option value="21">کهکیلویه و بویراحمد</option>
                        <option value="22">گلستان</option>
                        <option value="23">گیلان</option>
                        <option value="29">یزد</option>
                    </select>
                </div>
                <div class="form-group has-warning">
                    <label for="leave-city">شهر محل سکونت</label>
                    <select class="form-control" id="leave-city" required>
                        <option value="" selected disabled>لطفا استان خود را انتخاب کنید</option>
                        <option value="2">اطلاعات بر اساس استان انتخاب پر می شود</option>
                        <option value="32">مشهد</option>
                        <option value="4">گناباد</option>
                        <option value="5">نیشابور</option>
                        <option value="6">...</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="address">آدرس</label>
                    <textarea rows="2" class="form-control" id="address" placeholder="آدرس" ></textarea>
                </div>
                <div class="form-group">
                    <label for="email">ایمیل</label>
                    <input type="text" class="form-control" id="email" placeholder="ایمیل" >
                </div>
                <div class="form-group">
                    <label for="phone">تلفن ثابت</label>
                    <input type="text" class="form-control" id="phone" placeholder="تلفن ثابت" >
                </div>
                <div class="form-group has-warning">
                    <label for="mobile">تلفن همراه</label>
                    <input type="text" class="form-control" id="mobile" placeholder="تلفن همراه" required>
                </div>
                <div class="form-group has-warning">
                    <label for="job-title">عنوان شغل درخواستی</label>
                    <input type="text" class="form-control" id="job-title" placeholder="عنوان شغل" required>
                </div>
                <div class="form-group" style="direction:ltr;text-align:right;">
                    <label for="personal-pic" style="">تصویر</label>
                    <input id="file-0a" class="file" type="file" multiple data-min-file-count="1">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <button type="submit" id="register" class="btn btn-danger">ثبت نام</button>
            </div>
        </div>
    </form>
</div>

