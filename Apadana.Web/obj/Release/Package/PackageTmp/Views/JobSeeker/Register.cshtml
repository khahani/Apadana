
@{
    ViewBag.Title = "Register";
}

<div class="box-section banner-section triggerAnimation animated rollIn" data-animate="rollIn">
    <form data-toggle="validator" role="form">
        <div id="register-wizard">
            <h3>مشخصات اولیه</h3>
            <section>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="name">نام</label>
                            <input type="text" class="form-control" id="name" placeholder="نام" required>
                        </div>
                        <div class="form-group">
                            <label for="personal-id">شماره شناسنامه</label>
                            <input type="text" class="form-control" id="personal-id" placeholder="شماره شناسنامه" required>
                        </div>
                        <div class="form-group">
                            <label for="birth-place">محل تولد</label>
                            <input type="text" class="form-control" id="birth-place" placeholder="محل تولد" required>
                        </div>
                        <div class="form-group">
                            <label>وضعیت تاهل:</label><br />
                            <label class="radio-inline" >
                                <input type="radio" name="optradio">مجرد
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="optradio">متاهل
                            </label>
                        </div>
                        <div class="form-group">
                            <label for="province">استان</label>
                            <select class="form-control" id="province">
                                <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                                <option>آذربایجان غربی</option>
                                <option>خراسان رضوی</option>
                                <option>تهران</option>
                                <option>کرمان</option>
                                <option>سیستان و بلوچستان</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="address">آدرس</label>
                            <textarea rows="2" class="form-control" id="address" placeholder="آدرس" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="تحصیلات"></label>
                            <select class="form-control" id="">
                                <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                                <option>بیسواد</option>
                                <option>دیپلم</option>
                                <option>لیسانس</option>
                                <option>فوق لیسانی</option>
                                <option>دکتری و بالاتر</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="insurance-status">وضعیت بیمه</label>
                            <select class="form-control" id="insurance-status">
                                <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                                <option>دارم</option>
                                <option>در حال دریافت بیمه بیکاری</option>
                                <option>ندارم</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="religion">دین</label>
                            <select class="form-control" id="religion">
                                <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                                <option>اسلام - شیعه</option>
                                <option>اسلام - سنی</option>
                                <option>کلیمی</option>
                                <option>یهودی</option>
                                <option>زردتشتی</option>
                                <option>سایر</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="lastname">نام خانوادگی</label>
                            <input type="text" class="form-control" id="lastname" placeholder="نام خانوادگی" required>
                        </div>
                        <div class="form-group">
                            <label for="national-code"></label>
                            <input type="text" class="form-control" id="national-code" placeholder="کد ملی" required>
                        </div>
                        <div class="form-group">
                            <label for="current-status">وضعیت فعلی</label>
                            <select class="form-control" id="current-status">
                                <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                                <option>بیکار</option>
                                <option>محصل</option>
                                <option>شاغل جویای کار</option>
                                <option>بازنشسته</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="military-status">وضعیت خدمت</label>
                            <select class="form-control" id="military-status">
                                <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                                <option>پایان خدمت</option>
                                <option>معافیت پزشکی</option>
                                <option>معافیت کفالت</option>
                                <option>معافیت خاص</option>
                                <option>خدمت نکرده</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="city">شهر</label>
                            <input type="text" class="form-control" id="city" placeholder="شهر" required>
                        </div>
                        <div class="form-group">
                            <label for="phone">تلفن ثابت</label>
                            <input type="text" class="form-control" id="phone" placeholder="تلفن ثابت" required>
                        </div>
                        <div class="form-group">
                            <label for="field-of-study">رشته تحصیلی</label>
                            <input type="text" class="form-control" id="field-of-study" placeholder="رضته تحصیلی" required>
                        </div>
                        <div class="form-group">
                            <label for="health-status">وضعیت سلامت</label>
                            <select class="form-control" id="health-status">
                                <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                                <option>سالم</option>
                                <option>معلول</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="email">ایمیل</label>
                            <input type="text" class="form-control" id="email" placeholder="ایمیل" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="father-name">نام پدر</label>
                            <input type="text" class="form-control" id="father-name" placeholder="نام پدر" required>
                        </div>
                        <div class="form-group">
                            <label for="birth-date">تاریخ تولد</label>
                            <input type="text" class="form-control persian-date" id="birth-date" placeholder="" required>
                        </div>
                        <div class="form-group">
                            <label>جنسیت:</label><br />
                            <label class="radio-inline">
                                <input type="radio" name="optradio">آقا
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="optradio">خانم
                            </label>
                        </div>
                        <div class="form-group">
                            <label for="military-description">توضیحات معافیت:</label>
                            <input type="text" class="form-control" id="military-description" placeholder="توضیحات معافیت" />
                        </div>
                        <div class="form-group">
                            <label for="leave-place">منطقه محل سکونت:</label>
                            <select class="form-control" id="leave-place">
                                <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                                <option>پلیس راه</option>
                                <option>وکیل آباد</option>
                                <option>جاده قدیم</option>
                                <option>صد متری تا سپاد</option>
                                <option>صد متری تا پل فجر</option>
                                <option>صد متری تا میدان بار</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="mobile">تلفن همراه</label>
                            <input type="text" class="form-control" id="mobile" placeholder="تلفن همراه" required>
                        </div>
                        <div class="form-group">
                            <label for="university-type">نوع دانشگاه</label>
                            <select class="form-control" id="university-type">
                                <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                                <option>دولتی</option>
                                <option>آزاد</option>
                                <option>پیام نور</option>
                                <option>علمی کاربردی</option>
                                <option>غیر انتفاعی</option>
                                <option>سایر</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="disability-description">توضیحات معلولیت:</label>
                            <textarea class="form-control" id="disability-description" placeholder="توضیحات معلولیت" rows="2"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="pension-code">کد بازنشستگی</label>
                            <input type="text" class="form-control" id="pension-code" placeholder="کد بازنشستگی" required>
                        </div>
                    </div>
                </div>
            </section>
            <h3>ثبت عنوان شغلی</h3>
            <section>
                <div class="row">
                    <div class="col-md-9">
                        <div class="alert alert-info">
                            کارفرما گرامی چنانچه عنوان شغلی مورد نظر شما در میان گزینه ها نمی باشد روی دکمه افزودن عنوان شغلی کلیک کنید.
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-success">افزودن عنوان شغلی</button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="main-title">عنوان های اصلی:</label>
                            <select class="form-control" id="main-title">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>علوم پایه</option>
                                <option>نیروهای ساده و خدمات</option>
                                <option>گردشگری، هتلداری و مشاغل شهری</option>
                                <option>هنر، سینما و تبلیغات</option>
                                <option>نیروهای فنی و حرفه ای</option>
                                <option>کشاورزی، دامپروری و منابع طبیعی</option>
                                <option>...</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="sub-title">زیر عنوان:</label>
                            <select class="form-control" id="sub-title">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>خدمات حمل و نقل</option>
                                <option>راننده وسیله حمل و نقل صنعتی</option>
                                <option>راننده وسیله حمل و نقل شهری و سنگین</option>
                                <option>*** بر اساس عنوان اصلی پر خواهد شد</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="job-title">عنوان شغلی:</label>
                            <select class="form-control" id="job-title">
                                <option selected value="" disabled>لطفا یک گزینه را انتخاب نمایید</option>
                                <option>راننده دامپر</option>
                                <option>راننده لودر</option>
                                <option>راننده جرثقیل</option>
                                <option>*** بر اساس زیر عنوان پر خواهد شد</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>سابقه کار مرتبط دارید:</label><br />
                            <label class="radio-inline">
                                <input type="radio" name="optradio">بله
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="optradio">خیر
                            </label>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="address">آدرس:</label>
                            <textarea class="form-control" id="address" placeholder="آدرس" rows="2"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <button type="button" class="btn btn-danger">ثبت عنوان شغلی</button>
                    </div>
                </div>
            </section>
            <h3>ثبت اطلاعات تکمیلی</h3>
            <section>
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-warning">
                            کارجو گرامی این فرم رزومه شماست. در پر نمودن فیلدهای مربوطه دقت نمایید.
                        </div>
                    </div>
                </div>    
                <div class="row">
                    <div class="md-6">
                        <div class="form-group">
                            <label for="english-skills">تسلط به زبان انگلیسی</label>
                            <select class="form-control" id="english-skills">
                                <option value="" selected disabled>لطفا یک گزینه را انتخاب کنید</option>
                                <option>عالی</option>
                                <option>خوب</option>
                                <option>متسط</option>
                                <option>ضعیف</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="other-language-skills">سایر زبان ها</label>
                            <textarea rows="2" class="form-control" id="other-language-skills" placeholder="اگر به زبان دیگری تسلط دارید توضیح دهید"></textarea>
                        </div>
                    </div>
                </div>            
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="courses-description">دوره های گذرانده شده</label>
                            <textarea class="form-control" id="courses-description" placeholder="اگر دوره ای را گذرانده اید وارد نمایید" ></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="work-experience">سوابغ شغلی</label>
                            <textarea class="form-control" id="courses-description" placeholder="سوابق شغلی خود را وارد نمایید."></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-info">
                            یک فایل رزومه با حجم حداکثر 20 کیلوبایت با فرمت DOCS یا PDF انتخاب نمایید.
                        </div>
                        <div class="form-group">
                            <label for="resume-file">فایل رزومه</label>
                            <input type="file" id="resume-file" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-info">
                            یک تصویر پرسنلی با حجم حداکثر 50 کیلوبایت با فرمت png یا jpg انتخاب نمایید.
                        </div>
                        <div class="form-group">
                            <label for="personal-photo-file">عکس پرسنلی</label>
                            <input type="file" id="personal-photo-file" />
                        </div>
                    </div>
                </div>
            </section>
            <h3>پایان ثبت نام</h3>
            <section>
                <div class="alert alert-success">در صورتی که تمایل به تکمیل ثبت نام در بانک اطلاعاتی کاریابی و مشاوره شغلی دارید مبلغ 13000 تومان حق الزحمه ثبت نام را می توانید از طریق درگاه آنلاین سایت واریز نمایید.</div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="price">مبلغ قابل پرداخت</label>
                            <input type="text" readonly class="form-control" id="price" value="13000 تومان" />
                        </div>
                    </div>
                    <div class="col-md-8">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" id="payment" class="btn btn-success">پرداخت</button>
                    </div>
                </div>
                
            </section>
        </div>
    </form>
</div>

